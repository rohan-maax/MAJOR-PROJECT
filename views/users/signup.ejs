<% layout("/layouts/boilerplate") -%>
<div class="row mt-3 ">
    <h1 class="col-6 offset-3">Signup on Wonderlust</h1>
    

    <div class="col-6 offset-3">
        <form method="POST" action="/signup" novalidate class="needs-validation">
            <div class="md-3">
                <label for="username" class="form-label">Username</label>
    
                <input 
                name="username" 
                
                type ="text" 
                class="form-control"
                required/>
                <div class="invalid-feedback">Looks good!</div>
    
    
            </div>
            <br>
            <div class="md-3">
                <label for="email" class="form-label">Email</label>
    
                <input 
                name="email" 
                
                type ="text" 
                class="form-control"
                required/>
                <div class="invalid-feedback">Please enter short description! </div>
    
     
             
    
            </div>
            <br>
            <div class="md-3">
                <label for="password" class="form-label">Password</label>
    
                <input 
                name="password" 
                
                type ="password" 
                class="form-control"
                required/>
                <div class="invalid-feedback">Please enter short description! </div>
    
     
             
    
            </div>
            <br>
            <button class="btn btn-success">SignUp</button>
         </form>
    </div>

</div>