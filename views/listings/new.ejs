<% layout("/layouts/boilerplate") -%>
<style>
    .new-div{
border: 1px solid gray;
margin: 2rem;
border-radius: 1rem;
box-shadow: 2px 20px 30px rgba(155, 208, 235, 0.726)  ;
background-color: rgba(240, 255, 255, 0.747);
 }
</style>
    <body>
        <div class="row new-div">
            <div class="col-8 offset-2">
                <br><br>
                <h3 style="color: red; text-decoration: underline;">Create a New Listing </h3>
                <br>
                <form method="POST" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">
                    <div class="mb-3">
                        <label for="title" class="form-label"><b>Title</b></label>
                        <input name="listing[title]" placeholder="enter title " type="text" class="form-control"
                            required />
                        <div class="invalid-feedback">Please enter valid title</div>
                    </div>
                    <br><br>

                    <div class="mb-3">
                        <label for="description" class="form-label"><b>Description</b></label>
                        <textarea name="listing[description]" placeholder="enter description " class="form-control"
                            type="text" required>
                                </textarea>
                        <div class="invalid-feedback">Please enter short description! </div>

                    </div>

                    <br><br>
                
                    <div class="mb-3">
                        <label for="image" class="form-label"> <b>Upload Image</b>  </label>
                        <input name="listing[image]" type="file" required
                            class="form-control" />

                    </div>
                    <br><br>
                    <div class="row">
                        <div class="mb-3 col-md-4">
                            <label for="price" class="form-label"><b>Price</b></label>
                            <input name="listing[price]" placeholder="enter price "  required
                                class="form-control" />
                            <div class="invalid-feedback">Please enter valid price! </div>


                        </div>
                        <br><br>
                        <div class="mb-3 col-md-8">
                            <label for="country" class="form-label"><b>Country</b></label>
                            <input name="listing[country]" placeholder="enter country " type="text" required
                                class="form-control" />
                            <div class="invalid-feedback">Please enter valid country! </div>


                        </div>
                    </div>

                    <br><br>
                    <div class="mb-3">
                        <label for="location" class="form-label"><b>Location</b></label>
                        <input name="listing[location]" placeholder="enter location" type="text" class="form-control"
                            required />
                        <div class="invalid-feedback">Please enter valid location! </div>


                    </div>
                    <br><br>
                    <button class="btn btn-dark add-btn">Add</button>
                    <br><br>

                </form>
            </div>
        </div>


    </body>